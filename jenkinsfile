node{
        stage('Create folder') {
                sh '''
                cd /root/
                mkdir ${env.folder_name}
                cd ${env.folder_name}
                touch README
                '''
                echo 'Folder ${env.folder_name} is created.'
                echo 'README is created.'
        }
        stage('Wait for 30 sec'){
                echo 'Enter into sleep mode !'
                sh'''
                sleep 30
                '''
                echo 'Exiting sleep mode !'
        }
        stage('Deleting created folder'){
            sh'''
            cd /root/
            rm -r ${env.folder_name}
            '''
            echo 'Dir ${env.folder_name} is deleted.'
            echo 'Good Bye!'
        }
    }

