pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Create Directory Ripon') {
            steps {
                bat 'mkdir Ripon'
                echo 'Directory Created'
            }
        }
        stage('Run Java Programme'){
            steps {
                bat 'javac HelloWorld.java'
                bat 'java HelloWorld'
            }
        }
        stage('Delete Folder Good Bye') {
            steps {
                bat 'Del Ripon'
                echo 'Folder Deleted Successfully. Bye Bye !'
            }
        }
    }
}
